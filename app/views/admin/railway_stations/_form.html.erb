<%= form_with(model: [:admin, railway_station], local: true) do |form| %>
  <%= render 'common/errors', resource: railway_station %>

  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <%= form.submit "#{ railway_station.new_record?  ? t('.submit.create') : t('.submit.update') }", class: 'btn btn-primary mb-2' %>
<% end %>
