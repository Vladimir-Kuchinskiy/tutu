<% carriages.each do |carriage| %>
  <tr>
    <td><%= carriage.train.number %></td>
    <td><%= carriage.number %></td>
    <td><%= carriage.type.titleize %></td>
    <td><%= carriage.top_seats %></td>
    <td><%= carriage.bottom_seats %></td>
    <td><%= carriage.side_top_seats %></td>
    <td><%= carriage.side_bottom_seats %></td>
    <td><%= link_to 'Show', carriage.becomes(Carriage) %></td>
    <td><%= link_to 'Edit', edit_carriage_path(carriage) %></td>
    <td><%= link_to 'Destroy', carriage_path(carriage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
