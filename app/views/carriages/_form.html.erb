<%= form_with(model: carriage.becomes(Carriage), local: true) do |form| %>
  <%= render 'common/errors', resource: carriage %>

  <div class="field">
    <%= form.label :train_id %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, Carriage::TYPES %>
  </div>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.number_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.number_field :side_bottom_seats %>
  </div>

  <div class="actions">
    <%= form.submit "#{ carriage.new_record?  ? 'Create' : 'Update' }" %>
  </div>
<% end %>
