<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<% if @route.trains.empty? %>
  <p>Route has no trains</p>
<% else %>
  <p>Route has such trains:</p>
  <ul>
    <% @route.trains.each do |train| %>
      <li><%= train.number %></li>
    <% end %>
  </ul>
<% end %>

<% if @route.railway_stations.empty? %>
  <p>Route has no stations</p>
<% else %>
  <p>Route has such stations:</p>
  <table>
    <thead>
      <th>Title</th>
      <th>Serial Number</th>
    </thead>
    <tbody>
      <% @route.railway_stations_routes.ordered.each do |rs_route| %>
        <tr>
          <td><%= rs_route.railway_station.title %></td>
          <td><%= rs_route.serial_number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
